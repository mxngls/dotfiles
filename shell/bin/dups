#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

main() {
    if [[ $# -gt 0 ]]; then
        echo 'Error: No arguments allowed.'
        return 1
    fi

    declare -a dups

    git_log=$(
        # Compare the commit hash and the hash of its immediate parent
        git log \
            --pretty='%h [%p] %aN %s' \
            --date-order \
            --date=short \
            --color=never |
            sort -b -k4 -k2,2 |
            uniq -f 1 -d
    )

    while IFS= read -r commit; do
        [[ -n $commit ]] && dups+=("$commit")
    done < <(echo "$git_log")

    if [[ "${#dups[@]}" -gt 0 ]]; then
        echo "Found the following commits with duplicate commit messages:"
        for commit in "${dups[@]}"; do
            echo "$commit"
        done
    else
        echo "No duplicate commits found."
    fi

    return 0
}

main "$@"
