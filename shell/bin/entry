#!/bin/bash

# Create a new journal entry or modify its date if it already exists
set -eu

declare new_entry=${1:-}

if [[ -z "$new_entry" ]]; then
  new_entry="$(date +%Y-%m-%d).md"
  touch "$new_entry"
fi

if [[ $(wc -l < "$new_entry" | bc) == 0 ]]; then
  echo -e "# $(date)\n" > "$new_entry"
elif [[ $(tail "$new_entry") != '\n' ]]; then
  echo -e "# $(date)\n" >> "$new_entry"
else
  echo -e "\n# $(date)\n" >> "$new_entry"
fi

vim "$new_entry"
